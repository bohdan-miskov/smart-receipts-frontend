---
import Layout from '../layouts/Layout.astro';
import { ReceiptManager } from '../components/functional/ReceiptManager';
import { AuthWrapper } from '../components/functional/AuthWrapper';
---

<Layout title="Smart Receipts | AI Scanner">
	<div class="p-12">
	<AuthWrapper client:only="react">
		  <div class="max-w-7xl mx-auto">
			<div class="mb-8">
			  <h1 class="text-3xl font-bold text-slate-900">My Receipts</h1>
			  <p class="text-slate-500 mt-1">Manage and track your expenses with AI</p>
			</div>
			
			<ReceiptManager client:load />
		  </div>
		</AuthWrapper>
	</div>
</Layout>
